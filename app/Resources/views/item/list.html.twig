{% extends 'base.html.twig' %}

{% block body %}
<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
      <h1 class="display-4">Items Available for Sale</h1>
    </div>
<p><a href="/item/create"><button type="button" class="btn btn-primary">Add new Item</button></a></p> <br />

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Item Name</th>
      <th scope="col">Item Price</th>
      <th scope="col">Options</th>
    </tr>
  </thead>
  <tbody>
  {% for item in items %}
    <tr>
      <th scope="row">{{item.id}}</th>
      <td>{{item.name}}</td>
      <td>&euro;{{item.price}}</td>
      <td><button type="button" class="btn btn-success">Edit</button> <button type="button" class="btn btn-info">View</button> <button type="button" class="btn btn-danger">Delete</button>
</td>
    </tr>
{% endfor %}

  </tbody>
</table>   

{% endblock %}